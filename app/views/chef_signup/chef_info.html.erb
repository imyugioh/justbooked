<script>
    //<![CDATA[
    $(document).ready(function() {
        $(function(){
            $('.working-checkbox').change(function(e){
                $('#' + this.dataset.target).toggle();
                toggleHiddenValue(this.dataset.hiddenTarget);
            });
        });

        // Now let's set initial hidden fields value if schedule is off
        $('input.working-checkbox:checkbox:checked').each(function () {
            // set the hidden value to false
            $('#' + this.dataset.target).hide();
            toggleHiddenValue(this.dataset.hiddenTarget);
        });
    });
    
    function toggleHiddenValue(target_id) {
        if ($('#' + target_id).val() === 'false') {
            $('#' + target_id).val('true')
        } else {
            $('#' + target_id).val('false')
        }
    }
    //]]>
</script>    
