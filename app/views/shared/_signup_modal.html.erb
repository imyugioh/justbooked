<div class="modal modal-with-image modal--signup" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="signupModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header justify-content-end">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      </div>
      <div class="modal-body justify-content-center text-center">
        <h4>Join Now</h4>
        <p class="text-secondary">Be a part of Just Booked community</p>
        <%= form_for(:user, url: user_registration_path, html: {remote: true, id: 'signup_form'}) do |f| %>  
          <%= hidden_field_tag :authenticity_token, form_authenticity_token, id: 'signup_token' %>
          <%= f.email_field :email, class: 'form-control mb-2', placeholder: 'Enter your email', id: 'signup_email' %>
          <%= f.password_field :password, class: 'form-control mb-2', placeholder: 'Enter password', autocomplete: "off", id: 'signup_password1' %>
          <%= f.password_field :password_confrimation, class: 'form-control mb-2', placeholder: 'Confirm password', autocomplete: "off", id: 'signup_password2'  %>
          <%= f.text_field :first_name, class: 'form-control mb-2', placeholder: 'Enter first your name' %>
          <%= f.text_field :last_name, class: 'form-control mb-2', placeholder: 'Enter last your name' %>
          <button type="submit" class="btn btn-primary mb-2 btn-block">JOIN NOW</button>
          <p class="text-secondary">Already have an account? <a href="#" id="modalSigninLink" class="text-semibold" data-toggle="modal" data-target="#signinModal">Sign in</a></p>
        <% end %>
        <div class="terms">By signing up, I agree to Just Booked <a href="/pages/terms" class="text-semibold">Terms of service</a></div>
      </div>
    </div>
  </div>
</div>

<div class="modal" id="confirmationEmail" tabindex="-1" role="dialog" aria-labelledby="confirmationEmail" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="text-center">CONFIRMATION EMAIL SENT</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body justify-content-center ">
        
        <hr>
        <p class="text-secondary">We've sent you a confirmation email. Please check your inbox and confirm your email address to continue.</p>
        <hr>
        
        <a href="#" data-dismiss="modal" class="btn btn-primary mb-2 btn-block">OK</a>
      </div>
    </div>
  </div>
</div>
